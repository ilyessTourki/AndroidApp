<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Monday">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="-40dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="To manage your time well, it takes at least 7 hours of sleep, and you have to relax before work / studies of two hours"
        android:textColor="@color/backk_background"
        android:textSize="30sp"
        />

    <RelativeLayout
        android:layout_marginTop="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="350dp"
            android:text="Time To wake"
            android:textColor="@color/backk_background"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/wake"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="350dp"
            android:text="Time To wake"
            android:textColor="?attr/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:text="Time To sleep"
            android:textColor="@color/backk_background"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sleep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="400dp"
            android:text="Time To wake"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="450dp"
            android:text="Free Time"
            android:textColor="@color/backk_background"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/free"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="450dp"
            android:text="Time To wake"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:text="Time To wake"
        android:textColor="@color/backk_background"
        android:textSize="30sp" />
</FrameLayout>