<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:gravity="left"
    android:padding="5dp"
    android:background="@null">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="20dp">

        <TextView

            android:id="@+id/list_item_datefin"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:maxLines="4"
            android:text="colo"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="italic"
            card_view:fontFamily="@font/fjalla_one" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:maxLines="4"
            android:layout_marginTop="55dp"
            android:ellipsize="marquee"
            android:textSize="20sp"
            android:gravity="center"
            android:text="will be deleted on"
            android:textColor="#ffad33"
            android:layout_marginLeft="263dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/list_item_titre"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:maxLines="4"
            android:ellipsize="marquee"
            android:textSize="30sp"
            android:text="2222"
            android:textColor="#ffcc80"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="233dp"
            android:textStyle="bold"

            />




    </androidx.cardview.widget.CardView>

</RelativeLayout>