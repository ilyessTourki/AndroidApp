<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity"
    android:background="@drawable/bac_foreground">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgrect">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="UPDAT ACCOUNT"
                    android:textColor="#ffffff"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect1"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="16dp"
                    android:hint="Name"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffffff">

                </EditText>

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect1"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="16dp"
                    android:hint="Email"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffffff"

                    ></EditText>

                <TextView
                    android:id="@+id/updat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Update"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/create3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="UPDAT PASSWORD"
                    android:textColor="#ffffff"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect1"
                    android:drawableLeft="@drawable/pass"
                    android:drawablePadding="16dp"
                    android:hint="currentpassword"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffffff">

                </EditText>


                <EditText
                    android:id="@+id/newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect1"
                    android:drawableLeft="@drawable/pass"
                    android:drawablePadding="16dp"
                    android:hint="newpassword"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#fff"
                    android:textColorHint="#ffffff"></EditText>

                <TextView
                    android:id="@+id/updatpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Update Password"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect"
                android:gravity="center"
                android:padding="16dp"
                android:text="Delete Profile"
                android:textColor="#ffffff"
                android:textSize="25dp" />

        </LinearLayout>


    </FrameLayout>


</RelativeLayout>