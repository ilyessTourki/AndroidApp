<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Health"
    android:background="@drawable/bac_foreground">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgrect"
        >
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="italic" />
        <LinearLayout
            android:id="@+id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/heights"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Height :"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/height"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-47dp"
                android:background="@drawable/rect1"
                android:drawablePadding="16dp"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="#3F3C3C"
                android:textColorHint="#757373"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/cm"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_marginLeft="260dp"
                android:text="cm"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/weights"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Weight :"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/weight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-47dp"
                android:background="@drawable/rect1"
                android:drawablePadding="16dp"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="#3F3C3C"
                android:textColorHint="#757373"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/kg"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_marginLeft="260dp"
                android:text="Kg"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/yimc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Your IMC :"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/imc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-27dp"
                android:layout_marginLeft="150dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/your"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Your are :"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/are"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-27dp"
                android:layout_marginLeft="150dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/musts"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Your must "
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/must"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-27dp"
                android:layout_marginLeft="150dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/least"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="At least"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/at"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-27dp"
                android:layout_marginLeft="150dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:visibility="visible"/>

            <Button
                android:id="@+id/next"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="180dp"
                android:text="next"
                android:visibility="invisible"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>